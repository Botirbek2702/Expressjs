<div class="w-75 mx-auto">
    <form action="/add-product" method="post">
     {{#if AddProduct }}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> {{AddProduct}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <div class="form-floating mb-3">
    <input type="text" class="form-control" name="title" id="floatingInput" placeholder="Title">
    <label for="floatingInput">Title</label>
    </div>
    <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Description" name="description" id="floatingTextarea2" style="height: 100px"></textarea>
        <label for="floatingTextarea2">Description</label>
    </div>
    <div class="form-floating mb-3">
    <input type="text" class="form-control" name="image" id="floatingPassword" placeholder="Image">
    <label for="floatingPassword">Image</label>
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text bg-light">$</span>
        <div class="form-floating ">
            <input type="number" class="form-control " name="price" id="floatingInputGroup1" placeholder="Price" >
            <label for="floatingInputGroup2">Price</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add product</button>
</form>
</div>